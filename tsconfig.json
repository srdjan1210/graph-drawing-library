{
    "compileOnSave": true,
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "es6",
      "module": "es2020",
      "paths": {
        "@v1":                ["./v1/*"],
        "@Drawing/*":         ["./Drawing/*"],
        "@Utils/*":           ["./Utils/*"]
      }
    
    }
  }